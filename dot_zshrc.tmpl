# Path set up
{{- if eq .chezmoi.hostname "saturn" }}
    export PATH=$HOME/go/bin:$HOME/.npm-global/bin:$HOME/bin:/usr/local/bin:$PATH
{{- end }}

{{- if eq .chezmoi.os "darwin" }}
eval "$(/opt/homebrew/bin/brew shellenv)"
{{- end }}

export PATH=$HOME/.local/bin:$PATH

# zsh settings
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="spaceship"
zstyle ':omz:update' mode reminder  # just remind me to update when it's time
zstyle ':omz:update' frequency 13

DISABLE_AUTO_TITLE="true"
ENABLE_CORRECTION="true" # autocorrect
DISABLE_UNTRACKED_FILES_DIRTY="true"
HIST_STAMPS="mm/dd/yyyy"

plugins=(
    git
    zsh-autosuggestions
    zsh-syntax-highlighting
)

# nvim defauls
export VISUAL=nvim
export EDITOR=$VISUAL

source $ZSH/oh-my-zsh.sh

# User configuration
source $HOME/.aliases
[[ -d $HOME/profile ]] && source $HOME/.profile

{{- if eq .chezmoi.hostname "severian" }}
source .habitat_aliases
{{- end }}

# nvm
export NVM_DIR="$HOME/.nvm"

[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# python
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init - zsh)"